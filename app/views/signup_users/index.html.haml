    %section.newuser--main--display
      %h2.newuser--main--display--registration 新規会員登録
      .newuser--main--display--form
        .newuser--main--display--form--choose
          %button.btn-mail{id: ""}
            = link_to image_tag("email.logo.png", width: '25px', height: '25px', class: "fa-envelope"), step1_signup_users_path
            メールアドレスで登録する
          %br/
          %button#facebook-login.btn-facebook
            = link_to image_tag("facebook.logo.png", width: '30px', height: '30px', class: "fa-facebook-square"), "#"
